<%- include("include/head.ejs")%>
<body>
        <h1>Quora Post</h1>
        <div class="create-new-btn">
            <a class="btn btn-primary" href="http://localhost:8080/posts/new" role="button">Create new post</a>
           </div>
        <div class="content">
           <% for(let post of posts){%>
            <div class="card">
                <img src=<%= post.image%> alt="img01">
               <div class="user">
                <h3>Username : </h3>
                <span><%= post.username%></span>
            </div>
               <div class="card-age">
                <h3>Age : </h3>
                <span><%= post.age%></span>
            </div>
               <div class="card-desc">
                <h3 style="text-align: center;">Description : </h3>
                <p><%= post.description%></p>
            </div> 
            <div class="post-detail">
                <a class="" href="http://localhost:8080/posts/<%= post.id%>" role="button"><button type="button" class="btn btn-success">See in detail</button></a>
                <a class="" href="http://localhost:8080/posts/<%= post.id%>/edit" role="button"><button type="button" class="btn btn-primary">Edit</button></a>
               
            </div>  
            <br>
            <form method="POST" action="/posts/<%= post.id%>?_method=DELETE">
             <button type="submit" class="btn btn-danger">Delete</button>
            </form>   
            </div>
           <% }%>
        </div>
          

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>